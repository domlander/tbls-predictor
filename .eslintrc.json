{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "prettier"],
  "ignorePatterns": ["tsconfig.json"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".ts", ".tsx", ".js", ".jsx"] }
    ],
    // https://stackoverflow.com/a/64024916/3872362
    "no-use-before-define": "off",
    "radix": "off",
    "import/no-unresolved": "off",
    "jsx-a11y/anchor-is-valid": "off", // Next/link requires <a> tag without href attribute
    "@typescript-eslint/no-use-before-define": "off" // Prefer to have styled components at bottom of file. If we move to separate files for styles, then remove this.
  }
}
